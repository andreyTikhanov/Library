<Page x:Class="newTestLibrary.View.AddBook"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:newTestLibrary.View"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="AddBook">

    <Grid>
        <Image Source="\Images\RegisterFone.jpg" Stretch="Fill"/>
        <StackPanel>
            <Label Style="{StaticResource AddPageLabel}" 
                   Content="Введите название книги: "
                   Margin="10 20 0 0"></Label>
            <TextBox Style="{StaticResource textBoxAddPage}"/>
        </StackPanel>
    
    
    </Grid>
</Page>
